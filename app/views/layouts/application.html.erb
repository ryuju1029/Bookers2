<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    <script src="https://kit.fontawesome.com/05e7971d55.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body class="d-flex flex-column vh-100">
      <header class="bg-secondary text-white">
       <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
        <%= link_to "Bookers", root_path ,class:"text-white"%>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="header">
                 <i class="fas fa-home"></i>
                 <%= link_to "Home", user_path(current_user.id) ,class:"text-white" %>
              </li>

              <li class="header">
                  <i class="fas fa-users"></i>
                  <%= link_to "Users", users_path ,class:"text-white"%>
              </li>

              <li class="header">
                  <i class="fas fa-book-open"></i>
                  <%= link_to "Books", books_path ,class:"text-white"%>
              </li>

              <li class="header">
                 <i class="fas fa-sign-out-alt"></i>
                 <%= link_to "logout", destroy_user_session_path, method: :delete ,class:"text-white" %>
              </li>

            <% else %>

              <li class="header">
                 <i class="fas fa-home"></i>
                 <%= link_to "Home", root_path ,class:"text-white"%>
              </li>

             <li class="header">
                  <i class="fas fa-link"></i>
                  <%= link_to "About", home_about_path ,class:"text-white"%>
             </li>

             <li class="header">
                  <i class="fas fa-user-plus"></i>
                  <%= link_to "sign up", new_user_registration_path ,class:"text-white"%>
             </li>
             <li class="header">
                  <i class="fas fa-sign-in-alt"></i>
                  <%= link_to "login", new_user_session_path ,class:"text-white"%>
             </li>

            <% end %>
        </div>
        </div>
       </nav>
      </header>

      <main>
          <%= yield %>
      </main>
      <footer>
         <div class="mt-5">
          <p class="text-center">CopyRight Infratop.inc</p>
         </div>
      </footer>

    </body>
</html>
