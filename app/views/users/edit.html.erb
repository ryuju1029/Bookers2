<% if @user.errors.any? %>
    <%= @user.errors.count %>件のerrorが発生しました
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
<% end %>

<main>
 <div class="container mt-3">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <div class="user_title">
         <h1>User info</h1>
        </div>

       <%= form_with model:@user, local:true do |f| %>
         <div class="name">
          <label for="inputName">Name</label></br>
          <%= f.text_field :name,autofocus: true, id:"inputName", placeholder:"名前", :size => 60 %>
         </div>
         <div class="image">
          <label for="inputImage">image</label></br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
         </div>
         <div class="introduction">
          <label for="inputIntroduction">Introduction</label></br>
          <%= f.text_area :introduction,id:"Introduction", size: "60x3" %>
         </div>
           <%= f.submit "Update User" %>
       <% end %>
     </div>
    </div>
  </div>
</main>