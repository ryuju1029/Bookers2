<div class="container">
 <div class="row">
   <h1>User info</h1>
   <% if @user.errors.any? %>
    <%= @user.errors.count %>件のerrorが発生しました
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
   <% end %>
   <%= form_with model:@user, local:true do |f| %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    <label for="inputImage">image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :Introduction, autofocus: true, id:"Introduction"%>
    <%= f.submit "Update User" %>
   <% end %> 
   </div>
  </div> 
</div> 