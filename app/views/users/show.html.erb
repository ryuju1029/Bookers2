
  <div class="main container">
   <div class="side bar row">
     <div class="col-lg-3">
      <h1>User info</h1>
       <div class="profile_image">
        <%= attachment_image_tag @user,:profile_image,:fill,60,60,fallback:"no_image.jpg"%>
       </div>
        <table>
            <tr>
                <td>name</td>
                <td><%= @user.name %></td>
            </tr>
            <tr>
                <td>introduction</td>
                <td><%= @user.introduction %></td>
            </tr>
        </table>

        <div>
          <a class="fas fa-user-edit" href="/users/:id/edit"></a>
        </div>
        <div class="Newbook">
          <h1>New book</h1>
            <%= form_with model: @book, local:true do |f| %>
              <h4>title</h4>
              <%= f.text_field :title %>
              <h4>Opinion</h4>
              <%= f.text_area :body %><br>
              <%= f.submit 'Create Book' %>
            <% end %>
        </div>
     </div>

      <div class="main content col-lg-8">

          <h1 class="Book_contents">Books</h1>
           <table>
            <thead>
               <tr>
                 <th></th><th>Title</th><th>Opinion</th><th colspan="3"></th>
               </tr>
            </thead>
            <tbody>
            ã€€<% @books.each do |book| %>
               <tr>
                 <td><%= attachment_image_tag @user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></td>
                 <td><%= book.title %></td>
                 <td><%= book.body %></td>
                 </td>
               </tr>
              <% end %>
            </tbody>
           </table>
      </div>
    </div>
  </div>
