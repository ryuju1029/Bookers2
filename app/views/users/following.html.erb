<div class="container">
 <div class="row">
  <div class="col-md-12">
     <main>
         <h1>Follow Users</h1>
         <table cellspacing="15">
             <thead>
                 <tr>
                     <th>image</th><th>name</th><th></th><th></th><th></th>
                 </tr>
             </thead>
             <tbody>
                <% @users.each do |user| %>
                 <tr>
                     <td><%= attachment_image_tag user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></td>
                     <td><%= user.name %></td>
                     <td><a>フォロー数：<%= user.following.count %></a></td>
                     <td><a>フォロワー数：<%= user.followers.count %></a></td>
                     <td><%= link_to "Show", user_path(user) %></td>
                 </tr>
                <% end %>
             </tbody>
         </table>
     </main>
   </div>
 </div>
</div>