<% if flash[:notice] %>
<div class="flash">
<%= flash[:notice] %>
</div>
<% end %>



<div class="main container">
   <div class="side bar row">

    <%= render 'books/list', book: @new_book, user: @user %>

    <div class="main content col-md-8 offset-md-1">

          <h1 class="Book_contents">Book detail</h1>
           <table class="table table-hover table-inverse">
            <tbody>
               <tr>
                 <td>
                  <%= link_to user_path(@user), method: :get do %>
                   <%= attachment_image_tag @user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %>
                   <%= @user.name %>
                  <% end %>
                 </td>
                 <td><%= @book.title %></a></td>
                 <td><%= @book.body %></td>
                 <% if @user.id == current_user.id %>
                  <td>
                   <div class="btn btn-success"><%= link_to "Edit",edit_book_path(@book)%></div>
                  <td>
                   <div class="btn btn-danger"><%= link_to "Destroy",book_path(@book),method: :delete%></div>
                  </td>
                 <% end %>
               </tr>
            </tbody>
           </table>
      </div>
   </div>
</div>