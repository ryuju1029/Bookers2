<% if flash[:notice] %>
<div class="flash">
<%= flash[:notice] %>
</div>
<% end %>



<div class="main container">
   <div class="side bar row">

    <%= render 'books/list', book: @new_book, user: @user %>

    <div class="main content col-md-8 offset-md-1">

          <h1 class="Book_contents2">Book detail</h1>
           <table class="table table-hover table-inverse">
            <tbody>
               <tr>
                 <td>
                  <%= link_to user_path(@user), method: :get do %>
                   <%= attachment_image_tag @user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></br>
                   <%= @user.name %>
                  <% end %>
                 </td>
                 <td><%= @book.title %></a></td>
                 <td><%= @book.body %></td>
                 <td>
                  <% if @book.favorites_by?(current_user) %>
                   <p>
                    <%= link_to book_favorites_path(@book),method: :delete do %>
                     ♥<%= @book.favorites.count %>
                    <% end %>
                   </p>
                  <% else %>
                   <p>
                    <%= link_to book_favorites_path(@book),method: :post do %>
                    ♡<%= @book.favorites.count %>
                    <% end %>
                   </p>
                  <% end %>

                 </td>
                 <td>
                   <p>コメント件数:<%= @book_comments.count %>
                   </P>
                 </td>
                 <% if @user.id == current_user.id %>
                  <td>
                   <div class="btn btn-success"><%= link_to "Edit",edit_book_path(@book),{class: "Btn"}%></div>
                  <td>
                   <div class="btn btn-danger"><%= link_to "Destroy",book_path(@book), {method: :delete,class: "Btn"}%></div>
                  </td>
                 <% end %>
               </tr>
            </tbody>
           </table>

           <div class="comments">
            <table>
             <tbody>
              <% @book_comments.each do |book_comment| %>
              <tr>
               <td>
                <%= attachment_image_tag current_user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %></br>
                <%= current_user.name %>
               </td>
               <td>
                <%= book_comment.comment %>
               </td>
               <td>
                <% if book_comment.user == current_user %>
                <div class="btn btn-danger"><%= link_to "Destroy",book_book_comment_path(@book, book_comment), {method: :delete,class: "Btn"}%></div>
               </td>
              </tr>
               <% end %>
               <% end %>
             </tbody>
            </table>
           </div>

           <div class="new_comment">
            <%= form_with(model:[@book,@book_comment],local: true) do |f| %>
             <%= f.text_area :comment %></br>
             <%= f.submit"送信" %>
            <% end %>
           </div>

      </div>
   </div>
</div>